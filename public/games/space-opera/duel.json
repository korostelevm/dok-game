{
  "className": "Duel",
  "settings": {
    "viewportSize": [600, 385],
    "windowSize": [800, 600],
    "clamp": {
    	"left": -1500,
    	"right": 1500
    },
    "bodyStyle": {
      "backgroundImage": "linear-gradient(rgba(30,30,30), rgba(0,0,0))"
    }
  },
  "states": {
    "intro": {
      "start": true,
      "light": 1,
      "properties": {
        "music": "intro",
        "loop": true,
        "canMute": true
      },
      "onKeyDown": {
        "key": " ",
        "actions": [
          {
            "light": 0,
            "fadeVolume": 0
          },
          {
            "delay": 2500,
            "state": "dialog"
          }          
        ]
      }
    },
    "dialog": {
      "light": 1,
      "properties": {
        "music": "duel",
        "loop": true,
        "canMute": false
      },
      "actions": [
          {
            "animation": {
              "sprite": "left",
              "anim": "left-cowboy"
            }
          },
          {
            "animation": {
              "sprite": "right",
              "anim": "right-cowboy"
            }
          }
      ],
      "onKeyDown": {
        "key": " ",
        "animation": {
          "sprite": "left",
          "anim": "left-tease"
        }
      }
    },
    "draw": {
      "properties": {
        "music": null
      },
      "actions": [
        {
          "animation": {
            "sprite": "left",
            "anim": "left-draw"
          }
        },
        {
          "delay": 200,
          "animation": {
            "sprite": "right",
            "anim": "right-draw-shoot",
            "then": [
              {
                "animation": {
                  "sprite": "left",
                  "anim": "left-shot-with-gun"
                }
              },
              {
                "delay": 150,
                "animation": {
                  "sprite": "right",
                  "anim": "right-pointing-gun"
                }
              },
              {
                "delay": 1500,
                "animation": {
                  "sprite": "right",
                  "anim": "right-retract-gun"
                }
              },
              {
                "delay": 2000,
                "state": "lose"
              }
            ]
          }
        }
      ]
    },
    "quickdraw": {

    },
    "win": {

    },
    "lose": {
      "properties": {
        "music": "the-end",
        "loop": true
      },
      "fadeVolume": 0.5,
      "onKeyDown": {
        "key": " ",
        "actions": [
          {
            "light": 0,
            "fadeVolume": 0
          },
          {
            "delay": 2500,
            "state": "intro"
          }          
        ]
      }
    }
  },
  "world": {
    "mute": {
      "anim": "unmute",
      "size": [ 25, 25 ],
      "x": "{viewportWidth - 30}",
      "y": 5,
      "z": 10,
      "aux": {
        "MuteAuxiliary": {
          "toggleAnim": "mute"
        }
      }
    },
    "intro": {
      "anim": "intro",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 5,
      "aux": {
        "StateAuxiliary": {
          "state": "intro"
        }        
      }
    },
    "title": {
      "anim": "title",
      "size": [ 200, 100 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight * 3 / 4}", "z": 6,
      "aux": {
        "StateAuxiliary": {
          "state": "intro"
        }        
      }
    },
    "background": {
      "anim": "background",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 1,
      "aux": {
        "BlinkAuxiliary": {
          "chance": 0.7,
          "blinkAnim": "background-sign-off"
        }
      }
    },
    "cloud": {
      "repeat": 3,
      "anim": "cloud",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2 + index * 600}", "y": "{viewportHeight / 2}", "z": 2,
      "motion": [-2, 0, 0]
    },
    "right": {
      "anim": "right-cowboy",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 3,
      "aux": {
        "BlinkAuxiliary": {
          "chance": 0.005,
          "active": {
            "if-state": "dialog",
            "value": true,
            "else": false
          },
          "blinkAnim": "right-tease"
        },
        "OnFrameEndAuxiliary": {
          "right-draw-shoot": {
            "audio": "lazer"
          }
        }
      }
    },
    "left": {
      "anim": "left-cowboy",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 4,
      "aux": {
        "OnFrameEndAuxiliary": {
          "left-tease": [
            {
              "if-key-up": " ",
              "if-not-state": "draw",
              "animation": {
                "anim": "left-cowboy"
              }                    
            },
            {
              "if-key-down": " ",
              "if-not-state": "draw",
              "state": "draw"
            }
          ]          
        }
      }
    }
  },
  "audio": {
    "intro": {
      "src": "audio/duel-intro.mp3"
    },
    "duel": {
      "src": "audio/duel.mp3"
    },
    "lazer": {
      "src": "audio/lazer.mp3"
    },
    "the-end": {
      "src": "audio/the-end.mp3"
    }
  },
  "atlas": {
    "cloud": {
      "url": "assets/cloud.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}"
    },
    "intro": {
      "url": "assets/duel-bg.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[2]
    },
    "background": {
      "url": "assets/duel-bg.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1]
    },
    "title": {
      "url": "assets/duel-title.png",
      "spriteWidth": 200, "spriteHeight": 149,
      "hotspot": "{hotspot_center}"
    },
    "background-sign-off": {
