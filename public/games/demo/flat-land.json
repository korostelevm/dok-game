{
  "className": "FlatLand",
  "settings": {
    "perspective": true
  },
  "cameras": {
      "normal": {
        "default": true,
        "zOffset": 550
      }
  },
  "world": {
    "backwall": {
      "anim": "backwall",
      "size": ["{viewportWidth * 2}", "{viewportHeight * 2}"],
      "opacity": 0.5,
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": -1000
    }
  },
  "atlas": {
      "backwall": {
        "url": "assets/backwall.jpg",
        "hotspot": "{hotspot_center}"
      },
      "mazoo_still": {
        "url": "assets/mazoo.png",
        "cols": 3, "rows": 4,
        "range":[0],
        "hotspot": "{hotspot_bottom}"
      },
      "mazoo_down": {
        "url": "assets/mazoo.png",
        "cols": 3, "rows": 4,
        "frameRate": 10,
        "range":[0, 3],
        "hotspot": "{hotspot_bottom}"
      },
      "mazoo_up": {
        "url": "assets/mazoo.png",
        "cols": 3, "rows": 4,
        "frameRate": 10,
        "range":[4, 7],
        "hotspot": "{hotspot_bottom}"
      },
      "mazoo_right": {
        "url": "assets/mazoo.png",
        "cols": 3, "rows": 4,
        "frameRate": 10,
        "range":[8, 11],
        "hotspot": "{hotspot_bottom}"
      },
      "mazoo_left": {
        "url": "assets/mazoo.png",
        "cols": 3, "rows": 4,
        "range":[8, 11],
        "frameRate": 10,
        "direction": -1,
        "hotspot": "{hotspot_bottom}"
      },
      "hex": {
        "url": "assets/hex.png",
        "collision_url": "assets/hex.png",
        "cols": 2, "rows": 2,
        "range": [0],
        "hotspot": "{hotspot_center}"
      }
    }
}