{
  "className": "Duel",
  "settings": {
    "viewportSize": [600, 385],
    "windowSize": [800, 600],
    "clamp": {
    	"left": -1500,
    	"right": 1500
    },
    "bodyStyle": {
      "backgroundImage": "linear-gradient(rgba(30,30,30), rgba(0,0,0))"
    }
  },
  "states": {
    "intro": {
      "start": true,
      "music": "intro"
    },
    "dialog": {
      "music": "duel",
      "loopMusic": true
    },
    "waiting": {
      "music": "duel",
      "loopMusic": true
    },
    "draw": {
      "music": null
    },
    "quickdraw": {

    },
    "win": {

    },
    "lose": {

    },
    "gameOver": {

    },
    "score": {

    },
    "end": {

    }
  },
  "world": {
    "mute": {
      "anim": "unmute",
      "size": [ 25, 25 ],
      "x": "{viewportWidth - 30}",
      "y": 5,
      "z": 10,
      "aux": {
        "MuteAuxiliary": {
          "toggleAnim": "mute"
        }
      }
    },
    "intro": {
      "anim": "intro",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 5,
      "aux": {
        "StateAuxiliary": {
          "gameState": "intro"
        }        
      }
    },
    "title": {
      "anim": "title",
      "size": [ 200, 100 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight * 3 / 4}", "z": 6,
      "aux": {
        "StateAuxiliary": {
          "gameState": "intro"
        }        
      }
    },
    "background": {
      "anim": "background",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 1,
      "aux": {
        "BlinkAuxiliary": {
          "chance": 0.7,
          "blinkAnim": "background-sign-off",
          "active": {
            "if-state": "dialog",
            "value": true
          }
        }
      }
    },
    "cloud": {
      "repeat": 3,
      "anim": "cloud",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2 + index * 600}", "y": "{viewportHeight / 2}", "z": 2,
      "motion": [-2, 0, 0]
    },
    "right": {
      "anim": "right-cowboy",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 3,
      "aux": {
        "BlinkAuxiliary": {
          "chance": 0.001,
          "blinkAnim": "right-tease"
        },
        "OnFrameAuxiliary": {
          "onFrame": {
            "9": {
              "audio": "lazer",
              "animation": {
                "sprite": "left",
                "anim": "left-shot-with-gun"
              }
            }
          }
        }
      }
    },
    "left": {
      "anim": "left-cowboy",
      "size": [ 600, 385 ],
      "x": "{viewportWidth / 2}", "y": "{viewportHeight / 2}", "z": 4,
      "aux": {
        "OnFrameAuxiliary": {
          "onFrame": {
            "3": [
              {
                "if-key-up": " ",
                "if-not-state": "draw",
                "animation": {
                  "anim": "left-cowboy"
                }                    
              },
              {
                "if-key-down": " ",
                "if-not-state": "draw",
                "actions": [
                  {
                    "gameState": "draw"
                  },
                  {
                    "animation": {
                      "anim": "left-draw"
                    }
                  },
                  {
                    "animation": {
                      "sprite": "right",
                      "anim": "right-draw-shoot"
                    }
                  }
                ]
              }
            ]
          }
        }
      }
    }
  },
  "audio": {
    "intro": {
      "src": "audio/duel-intro.mp3"
    },
    "duel": {
      "src": "audio/duel.mp3"
    },
    "lazer": {
      "src": "audio/lazer.mp3"
    }
  },
  "atlas": {
    "cloud": {
      "url": "assets/cloud.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}"
    },
    "intro": {
      "url": "assets/duel-bg.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[2]
    },
    "background": {
      "url": "assets/duel-bg.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1]
    },
    "title": {
      "url": "assets/duel-title.png",
      "spriteWidth": 200, "spriteHeight": 149,
      "hotspot": "{hotspot_center}"
    },
    "background-sign-off": {
      "url": "assets/duel-bg.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[0]
    },
    "left-cowboy": {
      "url": "assets/duel-left.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[0]
    },
    "right-cowboy": {
      "url": "assets/duel-right.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[0]
    },
    "left-tease": {
      "url": "assets/duel-left.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1, 3],
      "loop": 1,
      "frameRate": 10
    },
    "right-tease": {
      "url": "assets/duel-right.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1, 2],
      "loop": 1,
      "frameRate": 8
    },
    "left-draw": {
      "url": "assets/duel-left.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[3, 8],
      "loop": 1,
      "frameRate": 10
    },
    "left-draw-backwards": {
      "url": "assets/duel-left.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1, 8],
      "loop": 1,
      "frameRate": 12,
      "reverse": true
    },
    "right-draw": {
      "url": "assets/duel-right.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1, 8],
      "loop": 1,
      "frameRate": 12
    },
    "left-draw-shoot": {
      "url": "assets/duel-left.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1, 9],
      "loop": 1,
      "frameRate": 14
    },
    "right-draw-shoot": {
      "url": "assets/duel-right.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[1, 9],
      "loop": 1,
      "frameRate": 20
    },
    "left-shot-with-gun": {
      "url": "assets/duel-left.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[10, 13],
      "loop": 1,
      "frameRate": 12
    },
    "right-body-shot": {
      "url": "assets/duel-right.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[10, 14],
      "loop": 1,
      "frameRate": 8
    },
    "left-shot-without-gun": {
      "url": "assets/duel-left.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[15, 18],
      "loop": 1,
      "frameRate": 8
    },
    "right-head-shot": {
      "url": "assets/duel-right.png",
      "spriteWidth": 706, "spriteHeight": 451,
      "hotspot": "{hotspot_center}",
      "range":[15, 18],
      "loop": 1,
      "frameRate": 8
    },
    "mute": {
      "url": "assets/ui-icon.png",
      "collision_url": "assets/ui-icon.png",
      "spriteWidth": 50, "spriteHeight": 50,
      "range": [0]
    },
    "unmute": {
      "url": "assets/ui-icon.png",
      "collision_url": "assets/ui-icon.png",
      "spriteWidth": 50, "spriteHeight": 50,
      "range": [1]
    }
  }
}