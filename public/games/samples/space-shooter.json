      "y": "{(random - .5) * viewportHeight * 2}"
    },
    "star2": {
   	  "repeat": 50,
      "anim": "debugBlockHighlight",
      "size": [
        "15",
        "15"
      ],
      "motion": [-200,0,0],
      "x": "{(random - .5) * viewportWidth * 2}",
      "y": "{(random - .5) * viewportHeight * 2}"
    }
  },
  "atlas": {
    "debugBlockHighlight": {
      "url": "assets/debug-block.png",
